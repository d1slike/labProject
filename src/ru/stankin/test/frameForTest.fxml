<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="620.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.stankin.test.TestController">
   <center>
      <VBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-border-color: black; -fx-border-radius: 25; -fx-border-width: 2; -fx-border-style: dashed;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="questionText" alignment="CENTER" text="Text" textAlignment="CENTER" wrapText="true">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </Label>
                  <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" visible="false" />
               </children>
            </VBox>
            <RadioButton fx:id="firstAnswer" mnemonicParsing="false" onAction="#onSelectFirst" selected="true" text="A" textOverrun="CLIP" wrapText="true">
               <toggleGroup>
                  <ToggleGroup fx:id="answerGroup" />
               </toggleGroup>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton fx:id="secondAnswer" mnemonicParsing="false" onAction="#onSelectSecond" text="B" textOverrun="CLIP" toggleGroup="$answerGroup" wrapText="true">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin></RadioButton>
            <RadioButton fx:id="thirdAnswer" mnemonicParsing="false" onAction="#onSelectThird" text="C" textOverrun="CLIP" toggleGroup="$answerGroup" wrapText="true">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin></RadioButton>
            <RadioButton fx:id="fourthAnswer" mnemonicParsing="false" onAction="#onSelectFourth" text="D" textOverrun="CLIP" toggleGroup="$answerGroup" wrapText="true">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin></RadioButton>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="currentResultLabel" text="Ответ" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets left="25.0" right="25.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <BorderPane maxHeight="30.0" prefWidth="600.0">
         <left>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Осталось попыток :" />
                  <Label fx:id="attemptsLabel" text="0" />
               </children>
               <BorderPane.margin>
                  <Insets left="20.0" />
               </BorderPane.margin>
            </HBox>
         </left>
         <right>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Осталось времени:">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <HBox>
                     <children>
                        <Label fx:id="minutesLabel" text="min" />
                        <Label text=":" />
                        <Label fx:id="secondsLabel" text="sec" />
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets right="30.0" />
               </BorderPane.margin>
            </HBox>
         </right>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <center>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Текущий вопрос:" />
                  <Label fx:id="currentQuestion" text="10" BorderPane.alignment="CENTER" />
                  <Label text="/" />
                  <Label fx:id="maxQuestion" contentDisplay="CENTER" text="10" />
               </children>
            </HBox>
         </center>
      </BorderPane>
   </top>
   <bottom>
      <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onNextButtonClick" prefHeight="30.0" prefWidth="120.0" text="Далее" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="25.0" top="25.0" />
         </BorderPane.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </bottom>
</BorderPane>
