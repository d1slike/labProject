<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="ru.stankin.test.TestController">
   <center>
      <VBox prefHeight="200.0" prefWidth="500.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="questionText" alignment="CENTER" prefHeight="17.0" prefWidth="692.0" text="Text" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Label>
            <RadioButton fx:id="firstAnswer" mnemonicParsing="false" onAction="#onSelectFirst" selected="true" text="A">
               <toggleGroup>
                  <ToggleGroup fx:id="answerGroup" />
               </toggleGroup>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton fx:id="secondAnswer" mnemonicParsing="false" onAction="#onSelectSecond" text="B" toggleGroup="$answerGroup">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></RadioButton>
            <RadioButton fx:id="thirdAnswer" mnemonicParsing="false" onAction="#onSelectThird" text="C" toggleGroup="$answerGroup">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></RadioButton>
            <RadioButton fx:id="fourthAnswer" mnemonicParsing="false" onAction="#onSelectFourth" text="D" toggleGroup="$answerGroup">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></RadioButton>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <BorderPane prefHeight="30.0" prefWidth="600.0">
         <left>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Осталось попыток :" />
                  <Label fx:id="attemptsLabel" text="0" />
               </children>
               <BorderPane.margin>
                  <Insets left="20.0"/>
               </BorderPane.margin>
            </HBox>
         </left>
         <right>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Осталось времени:">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <HBox>
                     <children>
                        <Label fx:id="minutesLabel" text="min" />
                        <Label text=":" />
                        <Label fx:id="secondsLabel" text="sec" />
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets right="20.0"/>
               </BorderPane.margin>
            </HBox>
         </right>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <center>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="10" BorderPane.alignment="CENTER"/>
                  <Label text="/"/>
                  <Label fx:id="maxQuestion" contentDisplay="CENTER" text="10"/>
               </children>
            </HBox>
         </center>
      </BorderPane>
   </top>
   <bottom>
      <Button mnemonicParsing="false" onAction="#onNextButtonClick" prefHeight="30.0" prefWidth="120.0" text="Далее" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
